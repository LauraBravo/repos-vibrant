
@{
    ViewData["Title"] = "Welcome";
}

<h2>Welcome to Community crisis centers</h2>
<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-success">
            <div class="panel-heading">User Consumer</div>
            <div class="panel-body">
                <form class="form-horizontal" action="/action_page.php">
                    <label for="email">Risk Level:</label>
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label for="inputEmail4">First Name</label>
                            <input class="form-control" id="inputEmail4" placeholder="First Name">
                        </div>
                        <div class="col-md-4">
                            <label for="inputPassword4">Last Name</label>
                            <input class="form-control" id="inputPassword4" placeholder="Last Name">
                        </div>
                        <div class="col-md-4">
                            <label for="inputPassword4">Middle Initial</label>
                            <input class="form-control" id="inputPassword4" placeholder="Middle Initial">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <label>Address</label>
                            <input class="form-control" placeholder="Address">
                        </div>
                        <div class="col-md-4">
                            <label>City</label>
                            <input class="form-control" placeholder="Address">
                        </div>
                        <div class="col-md-4">
                            <label>Zip Code</label>
                            <input class="form-control" placeholder="Address">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-6">
                            <label>Email</label>
                            <input type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="col-lg-6">
                            <label>Additional Phones</label>
                            <input class="form-control" placeholder="Additional Phones">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <label>Caller Crisis</label>
                            <textarea type="email" class="form-control" placeholder="Caller Crisis" />
                        </div>
                        <div class="col-lg-6">
                            <label>Additional Phones</label>
                            <input class="form-control" placeholder="Additional Phones">
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox"> Required further Contact
                        </label>
                    </div>
                    <a asp-area="" asp-controller="Home" asp-action="ProfileUpdate" class="btn btn-primary">Submit</a>
                    @*<button type="submit" class="btn btn-primary">Submit</button>*@
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="alert alert-warning">
            <strong>Success!</strong> You should <a href="#" class="alert-link">read this message</a>.
        </div>
    </div>
</div>


